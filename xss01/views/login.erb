<div class="row bg-danger">
  <%= message %>
</div>

<div class="row">
  <divclass="row">
    <div class="col-md-4">&nbsp;</div>
    <div class="col-md-4">
      <h3>Login<h3>
    </div>
    <div class="col-md-4">&nbsp;</div>
  </div>
  <div class="row">
    <div class="col-md-4">&nbsp;</div>
    <div class="col-md-4">
      <form class="form-group" id="login" action="login" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input class="form-control" type="text" value="" name="username" id="username" maxlength="12" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" id="password" maxlength="12" />
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-primary" />
        </div>
      </form>
    </div>
    <div class="col-md-4">&nbsp;</div>
  </div>
</div>
