<div class="row bg-danger">
  <%= message %>
</div>

<form class="" action="/profile" method="post">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Profile</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-2">Name:</div>
          <div class="col-md-10"><%== user[:name] %></div>
        </div>
        <div class="row form-group">
          <div class="col-md-2">Age:</div>
          <div class="col-md-10">
            <input name="age" class="form-control" type="number" max="150" min="1" value="<%== user[:age] %>" />
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-2">Gender:</div>
          <div class="col-md-10">
            <select name="gender" class="form-control">
              <option <% if user[:gender] == "Male" %><%= "selected" %><% end %>>Male</option>
              <option <% if user[:gender] == "Female" %><%= "selected" %><% end %>>Female</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">Email:</div>
          <div class="col-md-10">
            <input name="email" class="form-control" value="<%== user[:email] %>"
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <button type="submit" class="btn btn-primary">UPDATE</button>
      <a href="/profile" class="btn btn-default">Back</a>
    </div>
  </div>
</form>
